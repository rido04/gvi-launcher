<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="60dp"
    android:paddingVertical="30dp"
    android:background="@drawable/background"
    android:animateLayoutChanges="false">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitStart"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Tuesday, January 20"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="40dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#25000000"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <!-- WiFi Icon - BIGGER SIZE -->
            <ImageView
                android:id="@+id/wifiIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:background="#FF0000"
                android:contentDescription="WiFi Status" />

            <!-- Weather Icon - BIGGER SIZE -->
            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:background="#00FF00"
                android:contentDescription="Weather Status" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:28"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Grid Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- ROW 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- GVI Card - OPTIMIZED -->
            <FrameLayout
                android:id="@+id/cardApps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/card_selector"
                android:layerType="hardware">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_moun3"
                    android:alpha="0.75" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:text="GVI Smart Signage Integrated System"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center" />

            </FrameLayout>

            <!-- YouTube + Chrome -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- YouTube - OPTIMIZED -->
                <FrameLayout
                    android:id="@+id/cardMusic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/card_selector"
                    android:layerType="hardware">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_moun1"
                        android:alpha="0.75" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#40000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="24dp"
                        android:text="YouTube"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </FrameLayout>

                <!-- Chrome - OPTIMIZED -->
                <FrameLayout
                    android:id="@+id/cardVideo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/card_selector"
                    android:layerType="hardware">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_moun2"
                        android:alpha="0.75" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#40000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="24dp"
                        android:text="Chrome"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- ROW 2 - ALL OPTIMIZED -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Games - OPTIMIZED -->
                <FrameLayout
                    android:id="@+id/cardGames"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="#27AE60"
                    android:foreground="@drawable/card_selector"
                    android:layerType="hardware">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ®"
                            android:textSize="32sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </FrameLayout>

                <!-- Settings - OPTIMIZED -->
                <FrameLayout
                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="#F39C12"
                    android:foreground="@drawable/card_selector"
                    android:layerType="hardware">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš™ï¸"
                            android:textSize="32sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- All Apps - OPTIMIZED -->
                <FrameLayout
                    android:id="@+id/cardAllApps"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="#34495E"
                    android:foreground="@drawable/card_selector"
                    android:layerType="hardware">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“¦"
                            android:textSize="32sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Apps"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </FrameLayout>

                <!-- File Manager - OPTIMIZED -->
                <FrameLayout
                    android:id="@+id/cardExtra"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="#16A085"
                    android:foreground="@drawable/card_selector"
                    android:layerType="hardware">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“"
                            android:textSize="32sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="File Manager"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Global Vision Intermedia"
        android:textSize="14sp"
        android:textColor="#70FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

</RelativeLayout>